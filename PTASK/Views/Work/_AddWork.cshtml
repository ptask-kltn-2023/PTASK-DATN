@model PTASK.Models.Work
<div class="modal fade" id="modalWork" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-uppercase" id="exampleModalLabel1">Tạo công việc</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col mb-3">
                        <label class="form-label text-none" asp-for="name">Tên công việc</label>
                        <input type="text" asp-for="name" class="form-control" placeholder="Nhập tên công việc" />
                    </div>
                </div>

                <div class="mb-2">
                    <label class="form-label text-none" asp-for="startTime">Ngày bắt đầu</label>
                    <input class="form-control" type="date" value="" asp-for="startTime" />
                </div>
                <div class="mb-2">
                    <label class="form-label text-none" asp-for="endTime">Ngày kết thúc</label>
                    <input class="form-control" type="date" value="" asp-for="endTime" />
                </div>
                <div class="mb-2">
                    <div class="btn-group">
                        <a href="javascript:void(0);"
                           class="list-group-item list-group-item-action"
                           id="dropdownMenuClickableInside"
                           data-bs-toggle="dropdown"
                           data-bs-auto-close="outside"
                           aria-expanded="false">
                            Phân công <i class='bx bx-chevrons-right'></i>
                        </a>

                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuClickableInside">
                            <li>
                                <div class="dropend">
                                    <a class="dropdown-item"
                                       data-bs-toggle="dropdown"
                                       aria-haspopup="true"
                                       aria-expanded="false"
                                       href="javascript:void(0)">1 nhóm</a>
                                    <div class="dropdown-menu dropdown-menu-end w-px-300 p-2">
                                        <form onsubmit="return false">
                                            <div class="mb-3">
                                                <label for="exampleDropdownFormEmail1" class="form-label">Nhập tên nhóm</label>
                                                <input class="form-control"
                                                       list="datalistOptions"
                                                       id="exampleDropdownFormEmail1"
                                                       placeholder="Nhập để tìm kiếm" />
                                                <datalist id="datalistOptions">
                                                    <option value="San Francisco"></option>
                                                    <option value="New York"></option>
                                                    <option value="Seattle"></option>
                                                    <option value="Los Angeles"></option>
                                                    <option value="Chicago Chicago Chicago"></option>
                                                    <option value="Chicago"></option>
                                                    <option value="Chicago"></option>
                                                    <option value="Chicago"></option>
                                                    <option value="Chicago"></option>
                                                    <option value="Chicago"></option>
                                                    <option value="Chicago"></option>
                                                </datalist>
                                            </div>
                                            <button type="button" class="btn btn-outline-secondary">Hủy</button>
                                            <button type="button" class="btn btn-primary">Thêm</button>
                                            <a class="text-primary btn float-end" asp-area="" asp-controller="Member" asp-action="ListGroups">
                                                <u>Tạo nhóm</u>
                                            </a>

                                        </form>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="mb-2">
                    <div class="mb-2 d-flex justify-content-between align-items-center">
                        <label class="form-label text-none">Nhiệm vụ cần làm</label>
                        <button data-bs-toggle="modal"
                                data-bs-target="#modalMisson"
                                type="button"
                                class="btn btn-outline-success">
                            <i class='bx bx-plus'></i>Thêm
                        </button>
                    </div>
                    <ul class="list-group listToDo">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Soufflé pastry pie ice</span>
                            <img src="../assets/img/avatars/5.png"
                                 alt="Avatar"
                                 class="rounded-circle pull-up"
                                 width="30"
                                 data-bs-toggle="tooltip"
                                 data-popup="tooltip-custom"
                                 data-bs-placement="top"
                                 title="Lilian Fuller" />
                        </li>
                        <li class="list-group-item">
                            Bear claw cake biscuit
                        </li>
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAddWork" data-bs-dismiss="modal"
                        aria-label="Close">
                    Lưu
                </button>
            </div>
        </div>
    </div>
</div>