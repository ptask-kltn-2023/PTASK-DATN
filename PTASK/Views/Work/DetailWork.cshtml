@model Work

<div class="modal fade" id="detailWork-@Model._id" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">@Model.name</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex justify-content-between p-3">
                <div class="col-9 pe-2">
                    <div class="d-flex justify-content-between">
                        <b>Danh sách nhiệm vụ</b>
                        <span>
                            <a asp-area="" asp-controller="Task" asp-action="Index" asp-route-isBack="true" class="text-primary view-detail">Xem chi tiết >></a>
                        </span>
                    </div>
                    <div class="demo-inline-spacing">
                        <ul class="list-group listToDo">
                            <li class="list-group-item d-flex justify-content-between">
                                Soufflé pastry pie ice
                                <i class='text-success bx bx-check-circle'></i>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                Bear claw cake biscuit
                                <i class='text-success bx bx-check-circle'></i>
                            </li>
                        </ul>
                    </div>
                    <hr class="mt-4" />

                    <div class="g-2">
                        <b>Ngày thực hiện</b>
                        <div class="col d-flex align-items-center justify-content-between mb-3">
                            <label for="date-start" class="col-form-label">Ngày bắt đầu</label>
                            <input class="form-control" type="date" value="" id="date-start" />
                        </div>
                        <div class="col d-flex align-items-center justify-content-between">
                            <label for="date-end" class="col-form-label">Ngày kết thúc</label>
                            <input class="form-control" type="date" value="" id="date-end" />
                        </div>
                    </div>
                    <div class="g-2">
                        <b>Tiến độ công việc</b>
                        <div class="progress mt-2">
                            <div class="progress-bar bg-success"
                                 role="progressbar"
                                 style="width: 40%"
                                 aria-valuenow="40"
                                 aria-valuemin="0"
                                 aria-valuemax="100">
                                40%
                            </div>
                        </div>
                    </div>
                    <hr />

                    <div class="row mt-2">
                        <div class="col mb-3 ">
                            <label for="nameWithTitle" class="form-label">
                                <i class="bx bx-comment"></i> Bình luận
                            </label>
                            <div class="input-group  avatar-group">
                                <span data-bs-toggle="tooltip"
                                      data-popup="tooltip-custom"
                                      data-bs-placement="top"
                                      class="avatar avatar-xs pull-up"
                                      title="Lilian Fuller">
                                    <img src="/assets/img/avatars/5.png" alt="Avatar" class="rounded-circle" />
                                </span>
                                <textarea id="basic-icon-default-message"
                                          class="ms-1 form-control"
                                          placeholder="Viết bình luận của bạn"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div style="width: 33%" class="ms-2">
                    <div class="row">
                        <div class="col ms-2">
                            <b>Thao tác</b>
                        </div>
                    </div>
                    <div class="demo-inline-spacing mt-2">
                        <div class="list-group list-group-flush">
                            <a href="javascript:void(0);" class="list-group-item list-group-item-action">
                                <i class='bx bx-user-plus me-2'></i>Phân công
                            </a>
                            <a href="javascript:void(0);" t class="list-group-item list-group-item-action">
                                <i class='bx bx-receipt me-2'></i>Xuất báo cáo
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col m-2">
                            <b>Người thực hiện</b>
                        </div>
                        <ul class="">
                            <li class="m-1"
                                data-bs-toggle="tooltip"
                                data-popup="tooltip-custom"
                                data-bs-placement="top"
                                title="Lilian Fuller">
                                <img src="/assets/img/avatars/5.png" alt="Avatar" class="rounded-circle pull-up" width="35" height="35" />
                                <strong class="ms-2">Lilian Fuller</strong>
                            </li>
                            <li class="m-1"
                                data-bs-toggle="tooltip"
                                data-popup="tooltip-custom"
                                data-bs-placement="top"
                                title="Lilian Fuller">
                                <img src="/assets/img/avatars/5.png" alt="Avatar" class="rounded-circle pull-up" width="35" height="35" />
                                <strong class="ms-2">Lilian Fuller</strong>
                            </li>
                            <li class="m-1"
                                data-bs-toggle="tooltip"
                                data-popup="tooltip-custom"
                                data-bs-placement="top"
                                title="Lilian Fuller">
                                <img src="/assets/img/avatars/5.png" alt="Avatar" class="rounded-circle pull-up" width="35" height="35" />
                                <strong class="ms-2">Lilian Fuller</strong>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
             <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    Đóng
                </button>
                <button type="button" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>