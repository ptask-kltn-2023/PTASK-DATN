@model IEnumerable<PTASK.Models.Team>
@{
    Layout = "_LayoutProject";

    Pager pager = new Pager();
    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
<partial name="~/Views/Shared/Partial/_NavLeft.cshtml" />
<div class="main-wrapper ">
    <main class="main users chart-page" id="skip-target">
        <div class="container-xxl flex-grow-1" style="margin-top: 6%;">
            <div class="d-flex justify-content-between mb-2">
                <form class="d-flex" onsubmit="return false">
                    <input class="form-control me-2" type="search" placeholder="Tìm kiếm nhóm" aria-label="Tìm kiếm" />
                    <button class="btn btn-outline-primary" type="submit" style="width: 200px"><i class='bx bx-search'></i>Tìm kiếm</button>
                </form>
                <button data-bs-toggle="modal" data-bs-target="#modalGroup" class="btn btn-outline-success" type="submit"><i class='bx bx-user-plus'></i>Thêm nhóm</button>
            </div>
            <div class="card">
                <h5 class="tbl-members text-uppercase"><strong>Danh sách các nhóm tham gia dự án</strong></h5>
                <div class="table-responsive text-nowrap">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Tên nhóm</th>
                                <th>Trưởng nhóm</th>
                                <th>Công việc tham gia</th>
                                <th style="width:100px">Danh sách thành viên</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.teamName</strong></td>
                                    <td>@item.leaderName</td>
                                    <td> @string.Join(", ", item.workName)</td>
                                    <td class="text-center btn-viewListTask">
                                        <i class='bx bx-list-ul btn-viewListTask'
                                           data-bs-toggle="tooltip"
                                           data-bs-target="#DetailMember"
                                           data-bs-offset="0,4"
                                           data-bs-placement="bottom"
                                           data-bs-html="true"
                                           onclick="showModal()"
                                           title="<span>Xem chi tiết</span>"></i>
                                    </td>
                                    <td>
                                        <a data-bs-toggle="modal"
                                           data-bs-target="#largeModal" href="javascript:void(0);"><i class='bx bx-edit-alt me-1 text-warning'></i></a>
                                        <a href="javascript:void(0);"><i class="bx bx-trash me-1 text-danger"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <partial name="~/Views/Shared/Partial/_Pager.cshtml"
                     model="@pager"
                     view-data='@new ViewDataDictionary(ViewData) { { "Controller",  "Team"}, {"Action", "ListGroups"} }' />
        </div>
    </main>
</div>
<partial name="~/Views/Team/AddTeam.cshtml" model="new PTASK.Models.TeamCreate()" />
<partial name="~/Views/Team/DetailMember.cshtml" />

@section Scripts{
    <script>
        function showModal() {
            var myModal = new bootstrap.Modal(document.getElementById('DetailMember'))
            myModal.show()
        }
    </script>
    }
