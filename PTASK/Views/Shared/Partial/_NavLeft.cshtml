@{
    var active = ViewData["active"];
    var title = ViewData["TitleProject"];
}
<aside class="sidebar">
    <div class="sidebar-start">
        <div class="sidebar-head">
            @if (title != null && title.Equals("PTASK"))
            {
                <a asp-controller="Home" asp-action="Index" class="logo-wrapper">
                    <img src="~/assets/img/PTLOGO.jpg" class="icon logo" alt="LOGO" aria-hidden="true">
                    <div class="logo-text">
                        <span class="logo-title">@title</span>
                    </div>
                </a>
            }
            else if (title != null && !title.Equals("PTASK"))
            {
                <a class="logo-wrapper" asp-controller="Project" asp-action="Index">
                    <div class="logo-text">
                        <span class="logo-title text-uppercase">@title</span>
                    </div>
                </a>
            }
            <button class="sidebar-toggle transparent-btn" title="Menu"
                    type="button">
                <span class="sr-only">Toggle menu</span>
                <span class="icon menu-toggle" aria-hidden="true"></span>
            </button>
        </div>

        @if (title != null && title.Equals("PTASK"))
        {
            <div class="sidebar-body">
                <ul class="sidebar-body-menu">
                    <li>
                        <a class="btn-event active" asp-controller="Project" asp-action="Dashboard">
                            <span class="icon dashboard" aria-hidden="true"></span>Tổng quan
                        </a>
                    </li>
                    <li>
                        <a class="btn-event " asp-controller="Project" asp-action="Index">
                            <span class="icon briefcase" aria-hidden="true"></span>Tổng dự án
                        </a>
                    </li>
                    <li>
                        <a class="btn-event" href="##">
                            <span class="icon myProject" aria-hidden="true"></span>Dự án của bạn
                        </a>
                    </li>
                    <li>
                        <a class="btn-event" href="##">
                            <span class="icon join" aria-hidden="true"></span>Dự án đã tham gia
                        </a>
                    </li>
                    <li>
                        <a class="btn-event" href="##">
                            <span class="icon doing" aria-hidden="true"></span>Dự án đang thực hiện
                        </a>
                    </li>
                    <li>
                        <a class="btn-event" href="##">
                            <span class="icon successProject" aria-hidden="true"></span>Dự án đã hoàn thành
                        </a>
                    </li>
                   
                </ul>
            </div>
        }
        else if (title != null && !title.Equals("PTASK"))
        {
            <div class="sidebar-body">
                <ul class="sidebar-body-menu">
                    <li>
                        <a class="btn-event" asp-controller="DetailProject" asp-action="Index">
                            <span class="icon dashboard"></span>Tổng quan dự án
                        </a>
                    </li>
                    <li>
                        <a class="btn-event @active"
                            asp-area="" 
                            asp-controller="Work" 
                            asp-action="Index" 
                            asp-route-isBack="false">
                            <span class="icon listWork"></span>Danh sách công việc
                        </a>
                    </li>
                    <li>
                        <a class="btn-event" asp-area="" asp-controller="Task" asp-action="Index" asp-route-isBack="false">
                            <span class="icon workSuccess" aria-hidden="true"></span>Danh sách nhiệm vụ
                        </a>

                    </li>
                    <li>
                        <a class="btn-event" asp-area="" asp-controller="Team" asp-action="ListGroups">
                            <span class="icon successProject" aria-hidden="true"></span>Nhóm tham gia
                        </a>
                    </li>
                    <li>
                        <a class="btn-event" class="btn-event" asp-area="" asp-controller="Team" asp-action="ListMembers" asp-route-isBack="false">
                            <span class="icon member" aria-hidden="true"></span>Thành viên tham gia
                        </a>
                    </li>
                    <li>
                        <a class="btn-event" asp-controller="DetailProject" asp-action="Report">
                            <span class="icon report" aria-hidden="true"></span>Thống kê công việc
                        </a>
                    </li>
                </ul>
            </div>
        }
    </div>
</aside>

