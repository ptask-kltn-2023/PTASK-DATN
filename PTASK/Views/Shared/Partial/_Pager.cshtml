@model PTASK.Models.Pager
@{
    var isBack = ViewData["isBack"] as bool?;
    var controller = ViewData["Controller"];
    var action = ViewData["Action"];
}
@if (Model.TotalPages > 0)
{
    <ul class="pagination justify-content-end mt-2 mb-2">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-controller="@controller" asp-action="@action" asp-route-isBack="@isBack" asp-route-pg="1">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-controller="@controller" asp-action="@action" asp-route-isBack="@isBack" asp-route-pg="@(Model.CurrentPage - 1)">
                    <span aria-hidden="true">&lt;</span>
                </a>
            </li>
        }
        @for (var pg = Model.StartPage; pg <= Model.EndPage; pg++)
        {
            <li class="page-item @(pg == Model.CurrentPage ? "active": "")">

                <a class="page-link" asp-controller="@controller" asp-action="@action" asp-route-isBack="@isBack" asp-route-pg="@pg">@pg</a>
            </li>
        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-controller="@controller" asp-action="@action" asp-route-isBack="@isBack" asp-route-pg="@(Model.CurrentPage + 1)">
                    <span aria-hidden="true"> &gt;</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-controller="@controller" asp-action="@action" asp-route-isBack="@isBack" asp-route-pg="@(Model.TotalPages)">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }
    </ul>
}
