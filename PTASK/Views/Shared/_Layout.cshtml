          <div class="d-flex justify-content-center justify-content-lg-start">
            <a asp-controller="Account" asp-action="Register" class="btn-get-started scrollto">Đăng Ký</a>
            <a href="https://www.youtube.com/watch?v=wAmbDCJocJM" class="glightbox btn-watch-video">
              <i class="bi bi-play-circle"></i><span>Xem video</span></a>
          </div>
        </div>
        <div class="col-lg-6 order-1 order-lg-2 hero-img" data-aos="zoom-in" data-aos-delay="200">
          <img src="assets/img/Project-manager.png" class="img-fluid animated" alt="">
        </div>
      </div>
    </div>

  </section><!-- End Hero -->

    <main role="main" class="pb-3" id="main">
