<div class="modal fade" id="basicModal" tabindex="-1" style="display: none" aria-labelledby="modalCenterTitle" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-uppercase" id="modalCenterTitle">Tạo dự án</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body p-3">
                <form>
                    <div class="mb-2">
                        <label class="form-label">Hình nền</label>
                        <div class="d-flex align-items-start align-items-sm-center gap-4">
                            <label for="upload" tabindex="0">
                                <i class="bx bx-upload d-block d-sm-none"></i>
                                <input type="file"
                                       id="upload"
                                       class="account-file-input"
                                       hidden
                                       accept="image/png, image/jpeg" />
                                <img src="/assets/img/elements/1.jpg"
                                     alt="user-avatar"
                                     class="d-block rounded"
                                     height="200"
                                     width="600"
                                     id="uploadedAvatar" />
                            </label>
                        </div>
                    </div>
                    <div class="mb-2">
                        <label class="form-label" for="basic-default-fullname">Tên dự án</label>
                        <input type="text" class="form-control" id="basic-default-fullname" placeholder="Nhập tên dự án" />
                    </div>
                    <div class="mb-2">
                        <label class="form-label" for="project-start">Ngày bắt đầu</label>
                        <input class="form-control" type="date" value="" id="project-start" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="project-end">Ngày kết thúc</label>
                        <input class="form-control" type="date" value="" id="project-end" />
                    </div>
                    <div class="mb-2 d-flex">
                        <div class="btn-group">
                            <button type="button" class="btn btn-outline-success"
                                    id="dropdownMenuClickableInside"
                                    data-bs-toggle="dropdown"
                                    data-bs-auto-close="outside"
                                    aria-expanded="false">
                                <i class='me-2 bx bx-user-plus'></i>Thêm thành viên
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuClickableInside">
                                <li>
                                    <div class="btn-group dropend" style="width: 100%">
                                        <a class="dropdown-item "
                                           data-bs-toggle="dropdown"
                                           aria-haspopup="true"
                                           aria-expanded="false">Thêm 1 thành viên</a>
                                        <div class="dropdown-menu dropdown-menu-end w-px-300 p-2">
                                            <form onsubmit="return false">
                                                <div class="mb-3">
                                                    <label for="exampleDropdownFormEmail1" class="form-label">Nhập địa chỉ email</label>
                                                    <input type="email"
                                                           class="form-control"
                                                           id="exampleDropdownFormEmail1"
                                                           placeholder="email@gmail.com" />
                                                </div>
                                                <button type="button" class="btn btn-outline-secondary">Hủy</button>
                                                <button type="button" class="btn btn-primary btn-add-member">Thêm</button>
                                            </form>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="dropend">
                                        <a class="dropdown-item"
                                           data-bs-toggle="dropdown"
                                           aria-haspopup="true"
                                           aria-expanded="false"
                                           href="javascript:void(0)">Thêm 1 nhóm thành viên</a>
                                        <div class="dropdown-menu dropdown-menu-end w-px-300 p-2">
                                            <form onsubmit="return false">
                                                <div class="mb-3">
                                                    <label for="exampleDropdownFormEmail1" class="form-label">Nhập tên nhóm</label>
                                                    <input class="form-control"
                                                           list="datalistOptions"
                                                           id="exampleDropdownFormEmail1"
                                                           placeholder="Nhập để tìm kiếm" />
                                                    <datalist id="datalistOptions">
                                                        <option value="San Francisco"></option>
                                                        <option value="New York"></option>
                                                        <option value="Seattle"></option>
                                                        <option value="Los Angeles"></option>
                                                        <option value="Chicago Chicago Chicago"></option>
                                                        <option value="Chicago"></option>
                                                        <option value="Chicago"></option>
                                                        <option value="Chicago"></option>
                                                        <option value="Chicago"></option>
                                                        <option value="Chicago"></option>
                                                        <option value="Chicago"></option>
                                                    </datalist>
                                                </div>
                                                <button type="button" class="btn btn-outline-secondary">Hủy</button>
                                                <button type="button" class="btn btn-primary">Thêm</button>
                                                <a class="text-primary btn float-end" ><u>Tạo nhóm</u></a>

                                            </form>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>

                        <ul class="ms-2 list-unstyled users-list m-0 avatar-group d-flex align-items-center" id="list-member-groups">
                            <li data-bs-toggle="tooltip"
                                data-popup="tooltip-custom"
                                data-bs-placement="top"
                                class="avatar avatar-xs pull-up"
                                title="Lilian Fuller">
                                <img src="../assets/img/avatars/5.png" alt="Avatar" class="rounded-circle" />
                            </li>
                            <li data-bs-toggle="tooltip"
                                data-popup="tooltip-custom"
                                data-bs-placement="top"
                                class="avatar avatar-xs pull-up"
                                title="Sophia Wilkerson">
                                <img src="../assets/img/avatars/5.png" alt="Avatar" class="rounded-circle" />
                            </li>
                            <li data-bs-toggle="tooltip"
                                data-popup="tooltip-custom"
                                data-bs-placement="top"
                                class="avatar avatar-xs pull-up"
                                title="Christina Parker">
                                <img src="../assets/img/avatars/5.png" alt="Avatar" class="rounded-circle" />
                            </li>
                            <li data-bs-toggle="tooltip"
                                data-popup="tooltip-custom"
                                data-bs-placement="top"
                                class="avatar avatar-xs pull-up"
                                title="Christina Parker">
                                <img src="../assets/img/avatars/5.png" alt="Avatar" class="rounded-circle" />
                            </li>
                        </ul>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Tạo dự án</button>
            </div>
        </div>
    </div>
</div>

